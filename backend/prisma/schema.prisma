generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model book {
  id          Int      @id @default(autoincrement())
  titulo      String?  @db.VarChar(200)
  autor       String?  @db.VarChar(180)
  editorial   String?  @db.VarChar(180)
  descripcion String?
  formato     String?  @db.VarChar(80)
  paginas     Int?
  anio        String?  @db.VarChar(4)
  genero      String?  @db.VarChar(100)
  precio      Decimal? @db.Decimal(10, 2)
  ruta_imagen String?  @db.VarChar(200)
  valoracion  Decimal? @db.Decimal(2, 1)
  cart        cart[]
}

model cart {
  id       Int  @id @default(autoincrement())
  userId   Int
  bookId   Int
  quantity Int  @default(1)
  book     book @relation(fields: [bookId], references: [id])
  user     user @relation(fields: [userId], references: [id])

  @@unique([userId, bookId])
}

model user {
  id       Int    @id @default(autoincrement())
  nombre   String
  email    String @unique
  password String
  cart     cart[]
}
